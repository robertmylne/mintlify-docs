{
  "openapi": "3.1.0",
  "info": {
    "title": "Caspen",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "https://api.caspen.test/v1"
    }
  ],
  "paths": {
    "/clients": {
      "get": {
        "operationId": "client.index",
        "tags": [
          "Client"
        ],
        "parameters": [
          {
            "name": "cursor",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated set of `ClientResource`",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/ClientCollection"
                    },
                    "links": {
                      "type": "object",
                      "properties": {
                        "prev": {
                          "type": [
                            "string",
                            "null"
                          ]
                        },
                        "next": {
                          "type": [
                            "string",
                            "null"
                          ]
                        }
                      },
                      "required": [
                        "prev",
                        "next"
                      ]
                    }
                  },
                  "required": [
                    "data",
                    "links"
                  ]
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/ValidationException"
          },
          "401": {
            "$ref": "#/components/responses/AuthenticationException"
          }
        }
      },
      "post": {
        "operationId": "client.store",
        "tags": [
          "Client"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreClientRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "`ClientResource`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientResource"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/AuthenticationException"
          },
          "422": {
            "$ref": "#/components/responses/ValidationException"
          }
        }
      }
    },
    "/clients/{client}": {
      "get": {
        "operationId": "client.show",
        "tags": [
          "Client"
        ],
        "parameters": [
          {
            "name": "client",
            "in": "path",
            "required": true,
            "description": "The client ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "`ClientResource`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientResource"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/ModelNotFoundException"
          },
          "401": {
            "$ref": "#/components/responses/AuthenticationException"
          }
        }
      },
      "post": {
        "operationId": "client.update",
        "tags": [
          "Client"
        ],
        "parameters": [
          {
            "name": "client",
            "in": "path",
            "required": true,
            "description": "The client ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "first_name": {
                    "type": "string"
                  },
                  "last_name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "`ClientResource`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientResource"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/ValidationException"
          },
          "404": {
            "$ref": "#/components/responses/ModelNotFoundException"
          },
          "401": {
            "$ref": "#/components/responses/AuthenticationException"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientCollection": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ClientResource"
        },
        "title": "ClientCollection"
      },
      "ClientResource": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique client identifier.",
            "examples": [
              "cli_01HQFQ9QWTNNPY58FZ8CB3FWWK"
            ]
          },
          "first_name": {
            "type": "string",
            "description": "Client given name.",
            "examples": [
              "Helen"
            ]
          },
          "last_name": {
            "type": "string",
            "description": "Client family name.",
            "examples": [
              "Keller"
            ]
          }
        },
        "title": "ClientResource"
      },
      "PrivacyPolicyConsent": {
        "type": "string",
        "enum": [
          "accepted",
          "rejected"
        ],
        "title": "PrivacyPolicyConsent"
      },
      "StoreClientRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": [
              "string",
              "null"
            ]
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "preferred_name": {
            "type": [
              "string",
              "null"
            ]
          },
          "profession": {
            "type": [
              "string",
              "null"
            ]
          },
          "email": {
            "type": [
              "string",
              "null"
            ],
            "format": "email"
          },
          "date_of_birth": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "sex": {
            "type": [
              "string",
              "null"
            ]
          },
          "gender_identity": {
            "type": [
              "string",
              "null"
            ]
          },
          "pronouns": {
            "type": [
              "string",
              "null"
            ]
          },
          "privacy_policy_consent": {
            "$ref": "#/components/schemas/PrivacyPolicyConsent"
          },
          "emergency_contact_name": {
            "type": [
              "string",
              "null"
            ]
          },
          "emergency_contact_phone": {
            "type": [
              "string",
              "null"
            ]
          },
          "emergency_contact_relationship": {
            "type": [
              "string",
              "null"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          },
          "alert": {
            "type": [
              "string",
              "null"
            ],
            "maxLength": 500
          },
          "referral_type_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "referral_description": {
            "type": [
              "string",
              "null"
            ]
          },
          "referred_by_id": {
            "type": "string"
          },
          "phone_number": {
            "type": [
              "string",
              "null"
            ]
          },
          "intolerances": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            }
          },
          "address": {
            "type": "object",
            "properties": {
              "line1": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "line2": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "city": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "state": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "postal_code": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "country_code": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          },
          "tag_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "medications": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "dosage": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          },
          "allergies": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "reaction": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          },
          "phone_numbers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "number": {
                  "type": "string"
                },
                "code": {
                  "type": "string"
                },
                "type": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "enum": [
                    "mobile",
                    "home",
                    "work",
                    "other"
                  ]
                }
              },
              "required": [
                "number",
                "code"
              ]
            }
          }
        },
        "required": [
          "first_name",
          "last_name"
        ],
        "title": "StoreClientRequest"
      }
    },
    "responses": {
      "ValidationException": {
        "description": "Validation error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Errors overview."
                },
                "errors": {
                  "type": "object",
                  "description": "A detailed description of each field that failed validation.",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "message",
                "errors"
              ]
            }
          }
        }
      },
      "AuthenticationException": {
        "description": "Unauthenticated",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Error overview."
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      },
      "ModelNotFoundException": {
        "description": "Not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Error overview."
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    }
  }
}